{
  "include": ["src/*", "setup/*"],
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "experimentalDecorators": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
