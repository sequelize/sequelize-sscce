{
  "include": [
    "src/*",
    "dev/*"
  ],
  "compilerOptions": {
    "target": "es2021",
    "module": "nodenext",
    "experimentalDecorators": true,
    "moduleResolution": "nodenext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "newLine": "lf",
    "stripInternal": true,
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
